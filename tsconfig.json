{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "assets/scripts/js",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "assets/scripts/ts/",
    "assets/scripts/ts/*.tsx",
    "assets/scripts/ts/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
