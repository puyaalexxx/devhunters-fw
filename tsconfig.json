{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "sourceMap": false,
    "esModuleInterop": true,
    /*"types": [
      //"vite/client",
      "jquery",
      "jqueryui",
      "select2",
      "datepicker",
      "jquery.timepicker",
      "jquery.ui.datetimepicker"
    ],*/
    "paths": {
      "@/*": [
        "assets/*"
      ],
      "@ts/*": [
        "assets/scripts/*"
      ],
      "@pcss/*": [
        "assets/styles/*"
      ],
      "@dist/*": [
        "assets/dist/*"
      ],
      "@helpers/*": [
        "helpers/node/*"
      ]
    }
  },
  "include": [
    "assets/scripts/**/*",        // Include all scripts in the assets/scripts directory
    "helpers/node/**/*",          // Include everything in the helpers/node directory
    "helpers/node/types/**/*",    // Include all .ts files in types directory
    "helpers/node/dts/**/*"       // Include all declaration files in dts directory
  ],
  "exclude": [
    "node_modules"
  ]
}
